<div class="container">
  <div class="row">
  <div class="col-xs-3 sidenav">
  <div id="success_explanation">
  <p><%= flash[:message] %></p>
  </div>
  <div class="success_message">
  <p><%= flash[:notice] %></p>
  </div>
  <% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

    <h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, size:'100x100', fallback:'no_image.jpg', size:'100x100' %>
<table class="table">
      <tbody><tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
</tbody></table>
<div class="row">
  <%= link_to edit_user_path(current_user) do %>
  <p class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" ></p>
  <% end %>
</div>


  <h2>New book</h2>
  <%= form_for(@book) do |f| %>
     <h4>Title</h4>
     <%= f.text_field :title %>

     <h4>Opinion</h4>
     <%= f.text_field :body %><br><br>

     <%= f.submit "Create Book", class: "btn btn-primary col-xs-12 field" %>
   </div>
  <% end %>
