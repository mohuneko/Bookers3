 <%= render 'layouts/sidebar' %>

  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <tr>
        <th class="col-md-2 table-noborder"></th>
        <th class="col-md-3 table-noborder">Title</th>
        <th class="col-md-3 table-noborder">Opinion</th>
        <th class="col-md-2 table-noborder"></th>
        <th class="col-md-2 table-noborder"></th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user.id) do %>
          <%= attachment_image_tag book.user, :profile_image, format:'jpeg', fallback:"no_image.jpg", size:"40x40" %>
          <% end %></td>
          <td>
          <%= link_to book_path(book.id)  do %>
            <%= book.title %>
          <% end %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
  </div>
</div>
