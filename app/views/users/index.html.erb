<div class="container"><!--追加-->
  <div class="row">
<%= render 'layouts/sidebar' %>
<div class="col-xs-9">
<h2>Users</h2>
    <table class="table table-hover table-inverse">
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td>
           <%= attachment_image_tag user, :profile_image, size:'40x40', format:'jpeg', fallback:"no_image.jpg", size:"40x40" %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
          <%= link_to "Show", user_path(user.id) %>
          </td>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
  </div>
</div>

